@using Gat.Core.Entity
@model List<Product>
@{
    ViewData["Title"] = "SellerProductList";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<br />
<h3>Satılık Ürünler</h3>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Güncelle</th>
            <th>Sil</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Price</td>
                <td> <a class="btn btn-warning" asp-controller="Shop" asp-action="SellerUpdateProduct" asp-route-id="@item.Id">Güncelle</a> </td>
                <td> <a class="btn btn-danger" asp-controller="Exam" asp-action="ExamRemove" asp-route-id="@item.Id">Sil</a> </td>
                <td> <a class="btn btn-dark" asp-controller="Exam" asp-action="ExamRemove" asp-route-id="@item.Id">Ürün Detayı</a> </td>
            </tr>
        }     
            
        
    </tbody>
</table>

<a class="btn btn-primary" style="color:white;" asp-controller="Shop" asp-action="SellerAddProduct">Ürün Ekle</a>

